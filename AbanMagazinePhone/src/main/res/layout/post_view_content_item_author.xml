<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootViewItem"
    android:layout_width="match_parent"
    android:layout_height="101dp"
    android:background="@android:color/transparent"
    tools:context=".PostsConfigurations.SinglePost.SinglePostUI.SinglePostView">

    <net.geekstools.imageview.customshapes.ShapesImage
        android:id="@+id/postAuthorImage"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginStart="19dp"

        apps:shape="rounded"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/postAuthorName"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="19dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/default_color"
        android:textSize="25sp"
        android:textStyle="bold"

        apps:layout_constraintTop_toTopOf="@id/postAuthorImage"
        apps:layout_constraintStart_toEndOf="@id/postAuthorImage"
        apps:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/postAuthorBiography"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="19dp"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/default_color_light"
        android:textSize="15sp"

        apps:layout_constraintTop_toBottomOf="@id/postAuthorName"
        apps:layout_constraintStart_toEndOf="@id/postAuthorImage"
        apps:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>